      "grammar": [
        {
          "topic": "Verbs: ser vs. estar (present)",
          "notes": "Both mean 'to be'. Use 'ser' for identity/profession/traits; 'estar' for states/location.",
          "forms": {
            "present": {
              "ser": { "yo": "soy", "tú": "eres", "él/ella/usted": "es", "nosotros": "somos", "vosotros": "sois", "ellos/ellas/ustedes": "son" },
              "estar": { "yo": "estoy", "tú": "estás", "él/ella/usted": "está", "nosotros": "estamos", "vosotros": "estáis", "ellos/ellas/ustedes": "están" }
            }
          },
          "examples": [
            { "source": "Soy presidenta de una compañía.", "target": "I am president of a company." },
            { "source": "Estoy feliz de conocerte.", "target": "I’m happy to meet you." }
          ]
        }
      ]
    },
